    "version": "2.0.0",
    "tasks": [
        {
            "label": "echo",
            "type": "shell",
            "command": "echo Hello"
        },
        {
            "type": "cppbuild",
            "label": "Build Debug",
            "command": "Y:/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}\\src\\*.cpp",
                "-o",
                "${workspaceFolder}\\build\\debug\\${fileDirname}.exe",
                "-I",
                "${workspaceFolder}\\include",
                "-I",
                "K:\\lib\\wxw\\wx315\\include",
                "-I",
                "K:\\lib\\wxw\\wx315\\lib\\gcc_dll\\mswud",
                "-L",
                "K:\\lib\\wxw\\wx315\\lib\\gcc_dll",
                "-l",
                "wxmsw31ud_core",
                "-l",
                "wxmsw31ud_aui",
                "-l",
                "wxmsw31ud_adv",
                "-l",
                "wxbase31ud",
                "-l",
                "wxbase31ud_xml"
            ],
            "options": {
                "cwd": "Y:/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compilador: Y:/bin/g++.exe"
        }
    ]
}