    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with Make",
            "type": "shell",
            "command": "mingw32-make",
            "args":[
                    "-f",
                    "build/Makefile"
            ],
            "group": {
            "kind": "build",
            "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Run Gnu Make to build the project."
        },

        {
        "label": "Teste de Task",
        "type": "shell",
        "command": "pwd"
        }
    ]
}