{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build release",
            "type": "shell",
            "command": "mingw32-make",
            "group": "build",
            "options": {
                "cwd": "X:/idz80/build"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "mingw32-make",
            "args": [
                "DEBUG=1"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "X:/idz80/build"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "mingw32-make",
            "args": ["clean"],
            "group": "build",
            "options": {
                "cwd": "X:/idz80/build"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Check variables",
            "type": "shell",
            "command": "mingw32-make",
            "args": ["check"],
            "group": "build",
            "options": {
                "cwd": "X:/idz80/build"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": "$gcc"
        }
    ]
}